<div class="flex-container">

	<% if @avaliable_games %>
		<div class="create-game-container">
			<%= link_to 'Start New Game', new_game_path, class: 'btn btn-primary' %>
		</div>

		<% @avaliable_games.each do |game| %>
			<div class="game-item-wrapper">
			    <h4><%= game.name %></h4>
					<p>#<%= game.id %></p>
					<p>Other things</p>
                <br />
			    <%= link_to 'Join', '#', class: 'btn btn-primary' %>
			    			<br />
			</div>

		<% end %>
		    <% else %>
	            <h2>Waiting for a new player</h2>
							<div class="create-game-container">
								<%= link_to 'Start New Game', new_game_path, class: 'btn btn-primary' %>
							</div>
	<% end %>
</div>
